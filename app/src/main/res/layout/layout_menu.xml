<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GANTI RelativeLayout DENGAN MaterialCardView UNTUK HEADER -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/himatif_background"
        app:strokeWidth="0dp"
        app:cardPreventCornerOverlap="false">

        <com.example.himatiftrack.ShadowTextView
            android:id="@+id/tvMainTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Selamat Datang di HimatifTrack"
            android:fontFamily="@font/comfortaa_bold"
            android:textAlignment="center"
            android:textColor="#FDF9FC"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- KONTEN DI TENGAH -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/himatif"
            android:layout_marginBottom="46dp" />

        <TextView
            android:id="@+id/tvSubtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platform Input Data Mahasiswa"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvSubtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Himpunan Mahasiswa Teknologi Informasi"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/btnInputData"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="Input Data Mahasiswa"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/himatif_background"
            android:elevation="4dp" />

        <Button
            android:id="@+id/btnLihatData"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:text="Lihat Data"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/himatif_background"
            android:elevation="4dp" />
    </LinearLayout>

</LinearLayout>
